<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/btnklik"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="3dp"
        android:onClick="kuet"
        android:src="@drawable/juasprof"
        tools:ignore="OnClick,SpeakableTextPresentCheck"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/cabin_sketch"
        android:gravity="center"
        android:text="Profile"
        android:textColor="@android:color/black" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/cabin_sketch"
        android:text="@string/buah_segar_pedia"
        android:textColor="@color/black"
        android:textSize="29sp"
        android:textStyle="bold" />



        <GridLayout
            android:layout_width="220dp"
            android:layout_height="89dp"
            android:columnCount="2"
            android:rowCount="3">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="199dp"
                    android:gravity="center_horizontal"
                    android:layout_height="69dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btn_buka_buah_tropis"
                        android:layout_width="10dp"
                        android:layout_height="70dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@drawable/subtropis_chery3" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

        <GridLayout
            android:layout_width="220dp"
            android:columnCount="2"
            android:rowCount="3"
            android:layout_height="89dp">

            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:layout_width="200dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp"
                android:layout_height="70dp">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="69dp">

        <ImageButton
            android:id="@+id/btn_buka_buah_subtropis"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_width="10dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:src="@drawable/tropis_pepaya6"
            android:scaleType="fitXY"/>

        </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/pilih_menu_buah_yang_disukai"
        android:textStyle="italic"
        android:layout_marginBottom="32dp"/>



</LinearLayout>